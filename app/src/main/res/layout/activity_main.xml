<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.android.ggallery.museodellemarionette.MainActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/baciccialogo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/csp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credits"
        android:src="@drawable/credits"
        android:background="@null"
        android:layout_marginLeft="600px"
        android:layout_marginTop="100px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comune di Campomorone"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="48px"
        android:paddingTop="0px"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/stemma"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:paddingTop="300px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Con il contributo della Compagnia di San Paolo"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="32px"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />



    <ImageView
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:id="@+id/sipario"
        android:src="@drawable/sipario"
        android:paddingLeft="-200px" />

    <ImageView
        android:layout_width="875px"
        android:layout_height="200px"
        android:id="@+id/scrittamuseo"
        android:src="@drawable/scrittamuseo"
        android:layout_marginTop="0px"
        android:paddingLeft="-100px"/>
</RelativeLayout>
